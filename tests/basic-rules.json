{
  "container": {
    "attrs": {
      "inventory": {
        "type": "entity list"
      }
    }
  },

  "creature": {
    "includes": ["container"],
    "attrs": {
      "strength": {
        "type": "number"
      },
      "strengthMod": {
        "type": "number",
        "calc": "floor(strength / 2) - 5"
      },
      "strengthSave": {
        "type": "number",
        "calc": "1d20 + strengthMod"
      },

      "dexterity": {
        "type": "number"
      },
      "dexterityMod": {
        "type": "number",
        "calc": "floor(dexterity / 2) - 5"
      },
      "dexteritySave": {
        "type": "number",
        "calc": "1d20 + dexterityMod"
      },

      "constitution": {
        "type": "number"
      },
      "constitutionMod": {
        "type": "number",
        "calc": "floor(constitution / 2) - 5"
      },
      "constitutionSave": {
        "type": "number",
        "calc": "1d20 + constitutionMod"
      },

      "intelligence": {
        "type": "number"
      },
      "intelligenceMod": {
        "type": "number",
        "calc": "floor(intelligence / 2) - 5"
      },
      "intelligenceSave": {
        "type": "number",
        "calc": "1d20 + intelligenceMod"
      },

      "wisdom": {
        "type": "number"
      },
      "wisdomMod": {
        "type": "number",
        "calc": "floor(wisdom / 2) - 5"
      },
      "wisdomSave": {
        "type": "number",
        "calc": "1d20 + wisdomMod"
      },

      "charisma": {
        "type": "number"
      },
      "charismaMod": {
        "type": "number",
        "calc": "floor(charisma / 2) - 5"
      },
      "charismaSave": {
        "type": "number",
        "calc": "1d20 + charismaMod"
      },

      "baseArmorClass": {
        "type": "number",
        "calc": "10 + dexterityMod"
      },
      "armorClass": {
        "type": "number",
        "calc": "baseArmorClass"
      },

      "hitPoints": {
        "type": "number",
        "calc": "0"
      }
    }
  },

  "character": {
    "includes": ["creature"],
    "attrs": {
      "feats": {
        "type": "entity list",
        "inverse": "character"
      },
      "classes": {
        "type": "entity list",
        "inverse": "character"
      }
    }
  },

  "character-element": {
    "attrs": {
      "character": {
        "type": "entity"
      },
      "description": {
        "type": "text"
      }
    }
  },

  "feat": {
    "includes": ["character-element"]
  },

  "class": {
    "includes": ["character-element"],
    "attrs": {
      "levels": {
        "type": "entity list",
        "inverse": "class"
      }
    }
  },

  "class-level": {
    "attrs": {
      "class": {
        "type": "entity"
      }
    }
  }
}